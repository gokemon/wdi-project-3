<!DOCTYPE html>
<html lang="en">
<head>
 <% include ../partials/head %>
</head>

<body class="container-fluid">
 <header>
   <% include ../partials/header %>
 </header>

 <main class="page-wrap">
   <div>
     <h3>Prompts:
      <% if (currentUser) { %>
        <a href="/prompts/new" class="btn btn-primary pull-right">New Prompt   <i class="fa fa-plus-square-o" aria-hidden="true"></i></a>
        <% } %>
     </h3>
     <% prompts.forEach(function(prompt) { %>
       <h4 class="promptIndexPromptText">
         <form method="POST" action="/prompts/<%= prompt._id %>?_method=DELETE">
           <a href="/prompts/<%= prompt._id %>">
             <i class="fa fa-file-text-o" aria-hidden="true"></i>   <%= prompt.promptTheme + ' - ' + prompt.promptText %>
           </a>

            <% if (currentUser) { %>
              <% if (''+prompt.user == ''+currentUser._id) { %>
               <button type="submit" class="btn btn-xs btn-danger pull-right">Delete   <i class="fa fa-trash" aria-hidden="true"></i></button>
                       <% } %>
            <% } %>
         </form>
       </h4>
     <% }) %>
   </div>

 </main>


 <footer class="site-footer">
   <% include ../partials/footer %>
 </footer>
</body>
</html>
